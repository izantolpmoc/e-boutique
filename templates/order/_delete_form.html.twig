{% if app.user and 'ROLE_ADMIN' in app.user.roles %}
    <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
        <button class="btn">Delete</button>
    </form>

{% else %}

    <form method="post" action="{{ path('app_order_delete', {'id': order.id, 'route': 'app_user_account'}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endif %}
