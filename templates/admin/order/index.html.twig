{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <a href="{{ path('app_admin')}}" class="btn mb-3"><< Back to Dashboard</a>
    
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>IsValid</th>
                <th>Date</th>
                <th>Customer</th>
                <th>Number of items</th>
                <th>Total Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.number }}</td>
                <td>{{ order.valid ? 'Yes' : 'No'}}</td>
                <td>{{ order.date|date('Y-m-d') }}</td>
                <td>{{ order.user.name }} {{ order.user.firstname }}</td>
                <td>{{ order.getCommandLine|length}}</td>
                <td>{{ order.getTotal|number_format(2) }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
